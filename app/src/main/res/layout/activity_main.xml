<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b48f92"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/forum"
        android:gravity="center"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
        <EditText
            android:textSize="24sp"
            android:id="@+id/regis_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"

            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_shape"
            android:fontFamily="@font/forum"
            android:hint="Name"

            android:padding="20dp"
            android:textColor="#291b1c"
            android:textColorHint="@color/white" />

        <EditText
            android:textSize="24sp"
            android:id="@+id/regis_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"

            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_shape"
            android:fontFamily="@font/forum"
            android:hint="Email"
            android:padding="20dp"
            android:textColor="#291b1c"
            android:textColorHint="@color/white" />

        <EditText
            android:textSize="24sp"
            android:id="@+id/regis_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_shape"
            android:fontFamily="@font/forum"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#291b1c"
            android:textColorHint="@color/white" />

        <EditText
            android:textSize="24sp"
            android:id="@+id/regis_ConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_shape"
            android:fontFamily="@font/forum"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#291b1c"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/signin_shape"
            android:gravity="center"
            android:padding="20dp"
            android:text="Sign Up "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/forum"
            android:textColor="@color/white"
            android:text="Already Account "/>
        <TextView
            android:id="@id/signin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3d292a"
            android:textSize="25sp"

            android:text="Sign in ?"/>
    </LinearLayout>




</RelativeLayout>




